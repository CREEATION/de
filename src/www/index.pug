mixin page-footer()
  footer#page-footer
    .copyright
      img(src="../assets/images/creeation-logo.svg", class="logo:adapt image-align:center", alt="CREEATION Logo", title="CREEATION", inline)
      span(class="font:monospace") &copy; #{data.info.author.name}


block page-body
  #page
    +page-header()
    //- +page-main()

  +page-footer()
