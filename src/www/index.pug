mixin page-header()
  header#page-header
    .introduction(class="color:white theme:light/color:black theme:light/bg-color:white theme:dark/border:8/green theme:light/border:8/black")
      div
        h1
          span Hello! üê¢
          | &nbsp;
          span(class="color:green theme:light/color:green_a11y") I'm Thomas

        p(class="text:large")
          span I push #[+link(href="https://github.com/creeation", class="theme:dark/color:black theme:light/color:black") code]
          | &nbsp;
          span(class="color:green theme:light/color:green_a11y") &amp;
          | &nbsp;
          span play #[+link({ color: "red",  })(href="https://steamcommunity.com/id/int_row", class="theme:dark/color:black theme:light/color:black") games]

      div(class="theme:light/bg-color:black")
        div
          img(src="../../dist/assets/images/thomas_creeten.png", class="image-rendering:pixelated image-align:center", width="170", height="170", alt="Pixel-Art Portrait of Thomas Creeten", inline)

mixin page-main()
  main#page-main
        p.
          I'm looking for a front-end development job opportunity. So, if you happen to be a recruiter (üëÄ) feel free to
          check out my #[+link({color:"green"})(href="https://linkedin.com/in/creeten") LinkedIn profile] and get in touch.

        p.
          Alternatively, you can contact me through #[+link({color:"blue"})(href="https://t.me/creeten") Telegram] or via #[+link({color:"green", stamp: false})(href="mailto:thomas@creeation.de") thomas@creeation.de]

